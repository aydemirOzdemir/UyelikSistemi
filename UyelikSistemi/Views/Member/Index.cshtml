
@{
    ViewData["Title"] = "Index";
}
@model MemberViewModel
<h1>Kullanıcı Bilgileri</h1>

<div class="row">

<div class="col-md-6 offset-md-3  text-center">

        <user-picture-thumb-nail class="rounded" style="width:300px" picture-url="@Model.PictureUrl"></user-picture-thumb-nail>
        
</div>
  
</div>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <table class="table">
            <thead>
                <tr>

                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Telefon</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.Email</td>
                    <td>@Model.Phone</td>
                </tr>

            </tbody>

        </table>

    </div>

</div>

