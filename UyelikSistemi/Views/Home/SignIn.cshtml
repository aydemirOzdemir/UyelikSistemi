
@{
    ViewData["Title"] = "SignIn";
}

@model SignInViewModel


@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial");

}


<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Kullanıcı Giriş Formu</h2>
<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
</div>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                TempData["Message"]
            </div>
        }
<form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" method="post">
            <div class="row mb-3">
                <label for="Email" class="col-sm-4 col-form-label" asp-for="Email"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-sm-4 col-form-label" asp-for="Password"></label>
                <div class="col-sm-8">
                    <input asp-for="Password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>


    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
    </div>


            <div class="row mb-3">

                <div class="col-sm-8 offset-sm-4">
                    <button type="submit" class="btn btn-primary">Üye Ol</button>
                </div>
            </div>
            <div>
                <a  class="btn btn-link" asp-controller="Home" asp-action="ResetPasword">Şifremi Unuttum</a>
            </div>
</form>
 </div>
 </div>
